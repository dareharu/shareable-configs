{
  "name": "@dareharu/shareable-configs",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky install .github/husky",
    "dry-format": "biome check --no-errors-on-unmatched --files-ignore-unknown=true",
    "format": "biome check --no-errors-on-unmatched --files-ignore-unknown=true --apply",
    "test": "vitest run",
    "build": "turbo run build",
    "bump": "turbo run bump",
    "check-update": "turbo run check-update"
  },
  "lint-staged": {
    "*": [
      "pnpm format -- --staged"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-angular": "^18.6.1",
    "@favware/cliff-jumper": "^4.0.2",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vitest/coverage-v8": "^1.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "turbo": "^2.0.6",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.4.0+sha256.b6fd0bfda555e7e584ad7e56b30c68b01d5a04f9ee93989f4b93ca8473c49c74"
}
